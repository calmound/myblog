<%- include header %>
		<div class="container">
			
	 		<form method="post" action="/post/add">
	 			<% if(post._id){ %>
	 				<input type="hidden" name="post[_id]" value="<%= post._id %>"/>
	 			<% } %>	
	 			<div class="input-group" style="width: 100%;">
				  <span class="">标题</span>
				  <input type="text" class="form-control" name="post[title]" value="<%= post.title %>"  aria-describedby="basic-addon1">
				</div>
	 			
	 			<div class="input-group" style="width: 100%;">
	 				<span class="">正文</span>
	 				<textarea rows="20"  class="form-control"  style="width: 100%;" name="post[content]" ><%= post.content %></textarea>
	 			</div>
	 			<div class=" tagsinput-primary post-tag">
	 				<span class="">标签</span>
            		<input type="text" name="post[tag]" class="tagsinput form-control" data-role="tagsinput" value="<%= TagToString(post.tags)  %>" style="display: none;" />
          		</div>
				
				<span class="">分类</span>
				<div>
				    <select data-toggle="select" class="form-control select select-success mrs mbm" name="post[category]">
			          <option value="0">编程</option>
			          <option value="2">随笔</option>
			          <option value="3">金融</option>
			          <option value="1">绘画</option>
			          <option value="4">其他</option>
			       </select>
				</div>
	
	 			<input type="submit" class="btn btn-hg btn-primary" style="margin-top: 20px;" value="发表" />
	 			<a href="/" class="btn btn-hg btn-primary" style="margin-top: 20px;" >取消</a>
	 		</form>
	 		
 		</div>
   </body>
   <script>
   
   	$('.btn').click(function(){ 
   		var str = $('.post-tag .tag:first').text();
	    for(var i = 1 ;i < $('.post-tag .tag').length;i++){
	    	str += ',' + $('.post-tag .tag:eq('+ i +')').text();
	    }
	    $('.tagsinput').val(str);
	    
	    console.log(123);
   	});
   	
   		
	$("select").select2({dropdownCssClass: 'dropdown-inverse'});
	
   </script>
</html>
